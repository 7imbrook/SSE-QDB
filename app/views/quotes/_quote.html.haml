.well.well-large
    .controls
        = link_to quote.id, {:controller => "quotes", :action => "show", :id => quote}

        %span.vote_spacer
            
        = form_for quote, :url => "#{config.relative_url_root}/quotes/#{quote.id}/upvote", :remote => true, :html => {:method => "POST", :class => "form-inline"} do |f|
            %button.vote_control{:type => "submit"}
                %a.icon-thumbs-up

        = "#{quote.rating}"

        = form_for quote, :url => "#{config.relative_url_root}/quotes/#{quote.id}/downvote", :remote => true, :html => {:method => "POST", :class => "form-inline"} do |f|
            %button.vote_control{:type => "submit"}
                %a.icon-thumbs-down

    %br

    %blockquote
        %p
            = simple_format(quote.body)
    %small
        = quote.description
        - if quote.tags.any?
            %hr
    - quote.tags.each do |tag|
        = link_to tag.name, {:controller => "tags", :action => "show", :id => tag}, :class => " btn btn-info btn-small tag_button"